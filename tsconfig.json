{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"rootDir": "./src",
		"outDir": "./build",
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			]
		},
		"types": [
			"node"
		],
		"typeRoots": [
			"../node_modules/@types"
		]
	},
	"include": [
		"src/**/*"
	]
}